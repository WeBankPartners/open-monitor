{
  "http": {
    "port": "{{MONITOR_SERVER_PORT}}",
    "swagger": true,
    "cross": true,
    "alive": 2591000,
    "ldap": {
      "enable": false,
      "server": "127.0.0.1",
      "port": 389,
      "bindDN": "%s@test.com",
      "baseDN": "ou=Users_Employee",
      "filter": "(sAMAccountName=%s)",
      "attributes": ["name", "mail", "telephoneNumber"]
    },
    "log": {
      "enable": true,
      "level": "debug",
      "file": "/app/monitor/logs/monitor.log",
      "stdout": true
    }
  },
  "store": [
    {
      "name": "default",
      "type": "mysql",
      "server": "monitor-db",
      "port": 3306,
      "user": "root",
      "pwd": "{{MYSQL_ROOT_PASSWORD}}",
      "database": "monitor",
      "maxOpen": 20,
      "maxIdle": 10,
      "timeout": 60
    }
  ],
  "rpc": {
    "enable": false
  },
  "datasource" : {
    "env" : "dev",
    "servers": [
      {
        "id": 1,
        "type": "prometheus",
        "env": "dev",
        "host": "prometheus:9090",
        "token": ""
      }
    ],
    "divide_time": 1,
    "wait_time": 1
  },
  "limitIp": ["*"],
  "dependence": [
    {
      "name": "consul",
      "server": "http://consul:8500",
      "username": "",
      "password": "",
      "expire": 0
    }
  ],
  "prometheus" : {
    "config_path": "conf/rules",
    "config_reload": "http://prometheus:9090/-/reload"
  }
}